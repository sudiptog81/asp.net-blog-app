@model BlogMvc.Models.Post
@{
  ViewData["Title"] = "Delete";
}

<div class="container row pt-3 m-0">
  <div class="col-8">
    <h2>Delete @Html.DisplayFor(m => m.Title)</h2>
  </div>
  <div class="col-4">
    <a class="btn btn-block btn-outline-dark" asp-action="Index">Back to List</a>
  </div>
  <div class="col-12 pt-3">
    <h3 class="pt-3 pb-3">
      Are you sure you want to delete this?
    </h3>
    <dl class="row">
      <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.Title)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(m => m.Title)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.Content)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(m => m.Content)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(m => m.CreatedAt)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(m => m.CreatedAt)
      </dd>
    </dl>
    <form asp-action="Delete">
      <input type="hidden" asp-for="Id"/>
      <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
  </div>
</div>